<%= form_for [post.topic, post, post.comments.new] do |f| %>
<% if post.errors.any? %>
<div class="alert alert-danger">
  <h4>There are <%= pluralize(post.errors.count, "error") %>.</h4>
  <ul>
    <% post.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= form_group_tag(post.errors[:comment]) do %>
  <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter comment" %>
  <% end %>
<div class="form-group">
  <%= f.submit "Save", class: 'btn btn-success' %>
</div>
<% end %>
